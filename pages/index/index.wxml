<!--pages/index_bakcup/index.wxml-->
<text>pages/index_bakcup/index.wxml</text>


<view class="page">

 <view class="page__bd">

    <view class="weui-grids">

      <navigator url="../idmessage/idmessage" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/resources/index_bakcup/1.png" />
        <view class="weui-grid__label">个人信息登记</view>
      </navigator>

      <navigator url="../logs/logs" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/resources/index_bakcup/2.png" />
        <view class="weui-grid__label">登录状态</view>
      </navigator>

      <navigator url="../patientcase/patientcase" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/resources/index_bakcup/3.png" />
        <view class="weui-grid__label">健康诊断表</view>
      </navigator>


      <navigator url="../introducearticle/introducearticle" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/resources/index_bakcup/upload.jpg" />
        <view class="weui-grid__label" bindtap='download_message'>系统简介</view>
      </navigator>
      

      <view wx:if="{{userInfo.nickName == 'ding-丁'}}">
      <navigator url=" " class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="/resources/index_bakcup/upload.jpg" />
        <view class="weui-grid__label" bindtap='download_message'>表格下载</view>
      </navigator>
      </view>
      
    </view>

    

  </view>

</view>



<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>

<view class="weui-footer weui-footer_fixed-bottom">
            <view class="weui-footer__links">
                <navigator url="/index/index" class="weui-footer__link">首页</navigator>
            </view>
            <view class="weui-footer__text">Copyright © 2020-2021 liroding</view>
</view>





