<!--pages/doctor/doctor.wxml-->
<text>pages/doctor/doctor.wxml</text>

<view class="page">
    <view class="page__hd">
        <view class="page__desc">人工诊断 -- 病例本</view>
    </view>
    <view class="page__bd">

        <view class="weui-form-preview">

            <view class="weui-form-preview__item ">
                    <view class="weui-form-preview__label">医生工作台</view>                   
            </view>
            <view class="weui-form-preview__ft ">
                
                <navigator url=" " class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap='doctor_preview' id ='serch'>查看病例</navigator>

                <navigator url=" " class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap="showDialogBtn_doctor">医师诊断</navigator>

                <navigator url=" " class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap="showDialogBtn_consultants">会诊医师诊断</navigator>

                <navigator url=" " class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" bindtap='doctor_preview' id = 'next'>下一个</navigator>
            </view>
         </view> 


        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">病人信息</view>                   
                </view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">姓名</view>
                    <view class="weui-form-preview__value">{{name}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">性别</view>
                    <view class="weui-form-preview__value">{{sex}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">年龄</view>
                    <view class="weui-form-preview__value">{{age}}</view>
                </view>

                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">所属单位/部门</view>
                    <view class="weui-form-preview__value">{{department}}</view>
                </view>

            </view>

        </view>
        <!-------------------------------------------------------------------->
        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__label">病例</view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <!-- Case1 -->
                    <view wx:for="{{case1_data}}">
                        <view class="casestyle">{{item.value}}</view>
                        <view wx:if = "{{case1[index] == 1}}"> 
                            <view class="weui-form-preview__value">是</view>
                        </view>
                        <view wx:else>
                            <view class="weui-form-preview__value">否</view>
                        </view>                       
                    </view>
                    
    
                    <!-- 分割线 -->  
                    <view class="divLine"></view> 
                    <!-- Case2 -->

                    <view wx:for="{{case2_data}}">
                        <view class="casestyle">{{item.value}}</view>
                        <view wx:if = "{{case2[index] == 1}}"> 
                            <view class="weui-form-preview__value">是</view>
                        </view>
                        <view wx:else>
                            <view class="weui-form-preview__value">否</view>
                        </view>                       
                    </view>

                    <!-- 分割线 -->
                    <view class="divLine"></view>
                    <!-- Case3 -->
                    <view wx:for="{{case3_data}}">
                        <view class="casestyle">{{item.value}}</view>
                        <view wx:if = "{{case3[index] == 1}}"> 
                            <view class="weui-form-preview__value">是</view>
                        </view>
                        <view wx:else>
                            <view class="weui-form-preview__value">否</view>
                        </view>                       
                    </view>
        
                </view>

            </view>    

        </view>
        <!------------------------------------------------------------------------------------------>
        <!-- 分割线 -->
        <view class="divLine"></view>
        <!-- 病例图 -->
        <view class="weui-form-preview">
            
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__label">病例图</view>
            </view>        
            <view>
            <block wx:for="{{caseimglist}}"  >             
                <view class="weui-uploader__file ">
                        <image class="weui-uploader__img" src="{{item}}" data-index="{{index}}" bindtap=
                   "previewImage">
                  </image>
                </view>
            </block>   
            </view>        
            
        </view>

        <!------------------------------------------------------------------------------------------>       
    </view>
</view>
<!------------------------------------------------------------------------------------------>

<!--弹窗-->
<view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
    <view class="modal-dialog" wx:if="{{showModal}}">
        <view class="modal-title">填写诊断结果</view>
            <view class="modal-content">
                <view class="modal-input">
                    <input placeholder-class="input-holder" type="number" maxlength="20" bindinput="inputChangeResult_1" class="input" placeholder="结果一："></input>
                </view>
                <view class="modal-input">
                    <input placeholder-class="input-holder" type="number" maxlength="20" bindinput="inputChangeResult_2" class="input" placeholder="结果二"></input>
                </view>
                <view class="modal-input">
                    <input placeholder-class="input-holder" type="number" maxlength="20" bindinput="inputChangeResult_3" class="input" placeholder="结果三"></input> 
                </view>
                <view class="modal-input">
                    <input placeholder-class="input-holder" type="number" maxlength="20" bindinput="inputChange_option" class="input" placeholder="选填"></input>
                </view>
            </view>
 
            <view class="modal-footer">
                <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view>
                <view class="btn-confirm" bindtap="onConfirm" id="{{checkerdoctorid}}" data-status="confirm">确定</view>
            </view>
 
    </view>